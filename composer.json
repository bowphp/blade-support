{
	"name": "bowphp/blade",
	"description": "The bow framework blade template support",
	"keywords": ["blade", "tintin", "bowphp"],
	"type": "library",
	"require": {
		"bowphp/framework": "^5.0",
		"jenssegers/blade": "^1.4"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Franck Dakia",
			"email": "dakiafranck@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"\\Bow\\Blade\\": "src/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^10.1",
		"squizlabs/php_codesniffer": "3.*"
	},
	"scripts": {
		"phpcbf": "phpcbf --standard=psr12 --severity=4 --tab-width=4 src tests",
		"phpcs": "phpcs --standard=psr12 --severity=4 --tab-width=4 src",
		"test": "phpunit tests"
	}
}
